<div class="mt-4">
    <h3>Cập nhật sản phẩm</h3>

    <form class="mt-4" method="POST" action="/items/{{item._id}}?_method=PUT">
    <div class="form-group">
        <label for="id">Mã sản phẩm</label>
        <input type="text" class="form-control" value="{{item.id}}" id="id" name="id" >
    </div>
    <div class="form-group">
        <label for="name">Tên sản phẩm</label>
        <input type="text" class="form-control" value="{{item.name}}" id="name" name="name" >
    </div>
    <div class="form-group">
        <label for="total">Số lượng</label>
        <input type="text" class="form-control" value="{{item.total}}" id="total" name="total" >
    </div>
    <div class="form-group">
        <label for="price">Đơn giá</label>
        <input type="text" class="form-control" value="{{item.price}}" id="price" name="price" >
    </div>
    <div class="image">
        <label for="id">Hình ảnh</label>
        <input type="text" class="form-control" value="{{item.image}}" id="image" name="image" >
    </div>
    <div class="videoId">
        <label for="id">VideoId</label>
        <input type="text" class="form-control" value="{{item.videoId}}" id="videoId" name="videoId" >
    </div>

    <button type="submit" class="btn btn-primary mt-4">Lưu lại</button>
    </form>

</div>